<Window x:Class="COMIGHT.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Style="{StaticResource BaseWindowStyle}" Width="480" MaxHeight="960" SizeToContent="Height" WindowStartupLocation="CenterScreen" ContentRendered="InputDialog_ContentRendered" >
    
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="txtbxQuestion" Grid.Row="0" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" BorderBrush="Transparent" BorderThickness="0" Background="Transparent"/>
        
        <ComboBox x:Name="cmbbxOptions" Grid.Row ="1" Margin="5" SelectedIndex="0" IsEditable="False" />
        
        <TextBox x:Name="txtbxAnswer" Grid.Row ="2" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        
        <StackPanel Grid.Row="3" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" x:Name="btnDialogOk" Content="OK" Click="btnDialogOk_Click" />
            <Button IsCancel="True" x:Name="btnDialogCancel" Content="Cancel" Click="btnDialogCancel_Click" />
        </StackPanel>
    
    </Grid>
</Window>
