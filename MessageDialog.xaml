<Window x:Class="COMIGHT.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Style="{StaticResource BaseWindowStyle}" Width="480" MaxHeight ="360" SizeToContent="Height" WindowStartupLocation="CenterScreen" >

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="txtbxMessage" Grid.Row ="0" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" BorderBrush="Transparent" BorderThickness="0" Background="Transparent"/>

        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Content="OK" Click="btnDialogOk_Click" />
            <Button IsCancel="True" Content="Cancel" Click="btnDialogCancel_Click" />
        </StackPanel>
    
    </Grid>
</Window>
