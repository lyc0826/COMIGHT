<Window x:Class="COMIGHT.QRCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMIGHT"
        mc:Ignorable="d"
        Title="QR Code Generator" Style="{StaticResource BaseWindowStyle}" Height="480" Width="480" WindowStartupLocation="CenterScreen">
    
    <Grid Margin = "10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Label Content="Input Text:" Margin="5" />
            <TextBox x:Name="txtbxInput" Margin="5" MaxHeight="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" TextChanged="TxtbxInput_TextChanged"/>
        </StackPanel>
        
        <Image x:Name="imgbxQR" Grid.Row="1" Margin="5" Stretch="Uniform"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Save" Click="BtnSave_Click"/>
            <Button Content="Exit" Click="BtnExit_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
